<FrameLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v7.widget.CardView
        android:foreground="?attr/selectableItemBackground"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="5sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:background="#f5f5f5"
                android:layout_height="180dp"
                android:id="@+id/NewsImage"/>

            <RelativeLayout
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_below="@id/NewsImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Boeing Helps Dow Jones Beat Nasdaq; Stocks Break Out - Investor's Business Daily"
                    android:textSize="16sp"
                    android:id="@+id/NewsTitle"
                    android:textColor="@color/colorBlack"/>

                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="The Dow Jones industrial average gained an edge over the Nasdaq amid a moderate rally in stocks today. But small caps rose even more."
                    android:maxLines="2"
                    android:paddingBottom="5dp"
                    android:id="@+id/NewsDescription"
                    android:layout_below="@id/NewsTitle"/>

                <TextView
                    android:id="@+id/NewsPublishTime"
                    android:layout_width="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/NewsDescription"
                    android:textSize="11sp"
                    android:text="2 HOURS AGO" />
            </RelativeLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>